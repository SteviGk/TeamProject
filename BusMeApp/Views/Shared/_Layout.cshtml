<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BusMe</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://kit.fontawesome.com/b834d8979a.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Fira+Sans+Extra+Condensed&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-primary fixed-top">
        @Html.ActionLink("  BusMe", "Index", "Home", new { area = "" }, new { @class = "navbar-brand fas fa-bus-alt" })
        <div class="navbar-header">
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            @if (Request.IsAuthenticated && User.IsInRole("Administrator"))
            {
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Bus Routes", "Index", "BusRoutes", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Cities", "Index", "Cities", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Reservations", "Index", "Reservations", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Passengers", "Index", "Passengers", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Chat", "Index", "Chat", null, new { @class = "nav-link" })</li>
                </ul>
            }
            @if (Request.IsAuthenticated && !User.IsInRole("Administrator"))
            {
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Bus Routes", "Details", "BusRoutes", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Reservations", "Index", "Reservations", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Chat", "Index", "Chat", null, new { @class = "nav-link" })</li>
                </ul>
            }
        </div>
        @Html.Partial("_LoginPartial")
    </nav>
    <div class="container body-content">
        @RenderBody()
        <footer class="fixed-bottom  bg-primary text-white-50">
            <div class="container text-center">
                <p>&copy; @DateTime.Now.Year - BusMe</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>